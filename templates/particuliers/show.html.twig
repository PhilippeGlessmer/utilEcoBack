{% extends 'base.html.twig' %}

{% block title %}Modèles: Ajout{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Marques : Entrée d'un nouveau modèles</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('marques_index') }}">Modèles</a></li>
                            <li class="breadcrumb-item active">Entrée d'un modèle en BDD</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Fiche d'un particulier</h3>
                        <a href="{{ path('particuliers_edit', {'id': particulier.id}) }}" class="btn btn-outline-warning float-right ">Modifier</a>
                        <div class="card-tools mr-2">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ particulier.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ particulier.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prenom</th>
                                <td>{{ particulier.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ particulier.email }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>


{% endblock %}
