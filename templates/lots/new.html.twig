{% extends 'base.html.twig' %}

{% block title %}New Lot{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Marques : Entrée d'un Lot</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('lots_index') }}">Lots</a></li>
                            <li class="breadcrumb-item active">Entrée d'un lot en BDD</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Formulaire d'entrée d'un lot</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.fournisseur) }}
                        <div style="display: none">
                        {{ form_row(form.etat) }}
                        </div>
                        <button class="btn btn-success w-100">{{ button_label|default('Enregistrer le nouveau lot dans la base de donnée') }}</button>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </section>
    </div>


{% endblock %}
