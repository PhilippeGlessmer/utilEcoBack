{% extends 'base.html.twig' %}

{% block title %}Edit Lots{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lots: Fiche lot <b>{{ lot.id }}</b></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{  path('lots_index') }}">Lots</a></li>
                        <li class="breadcrumb-item active">Fiche lot</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Détail du Lot <b>{{ lot.id }}</b></h3>
                            <span class="float-right">{{ include('lots/_delete_form.html.twig') }}</span>
                            <a href="{{ path('lots_edit', {'id': lot.id}) }}" class="btn btn-outline-warning float-right mr-2">Modifier</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body h-100">
                            <h1>Edit Lots</h1>
                            {{ form_start(form) }}
                            {{ form_row(form.fournisseur) }}
                            {{ form_widget(form.etat) }}

                            <button class="btn btn-success w-100 mt-3">{{ button_label|default('Enregistrer le nouveau lot dans la base de donnée') }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
