{% extends 'base.html.twig' %}

{% block title %}Hello DashbordController!{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Dashbord</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Dashbord</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>{{ nbencours }} <sup style="font-size: 20px">Materiel(s)</sup></h3>

                            <p>Test en cours</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="" class="small-box-footer rotate">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>{{ nbavendre }} <sup style="font-size: 20px">Materiel(s)</sup></h3>

                            <p>Reconditionné à la vendre</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>{{ nbdonner }} <sup style="font-size: 20px">Materiel(s)</sup></h3>

                            <p>Reconditionné aux don</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>{{ nbjeter }} <sup style="font-size: 20px">Materiel(s)</sup></h3>

                            <p>Recyclé</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <div class="row">
                <div class="col-6">
                    <!-- TO DO List -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="ion ion-clipboard mr-1"></i>
                                Liste des test en cours
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <ul class="todo-list" data-widget="todo-list">
                                {% for test in testEnCour|slice(0, 8) %}
                                <li>
                                    <!-- drag handle -->
                                    <span class="handle">
                                      <i class="fas fa-ellipsis-v"></i>
                                      <i class="fas fa-ellipsis-v"></i>
                                    </span>
                                    <!-- todo text -->
                                    <span class="text">{{ test.id~' | '~test.modele.type.libelle~' '~ test.modele.marque.libelle~' '~test.modele.libelle}}</span>
                                    <!-- Emphasis label -->
                                    <small class="badge badge-danger"><i class="far fa-clock"></i> 2 mins</small>
                                    <a href="{{ path('materiels_show', {'id': test.id}) }}" class="btn-sm btn-success float-right">Retour test</a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <!-- TO DO List -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="ion ion-clipboard mr-1"></i>
                                Derniers Modeles
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <ul class="todo-list" data-widget="todo-list">
                                {% for model in lastModels|slice(0, 8) %}
                                <li>
                                    <!-- drag handle -->
                                    <span class="handle">
                                      <i class="fas fa-ellipsis-v"></i>
                                      <i class="fas fa-ellipsis-v"></i>
                                    </span>
                                    <span class="text">{{ model.marque.libelle~' '~model.libelle }}</span>
                                    <!-- Emphasis label -->
                                    <small class="badge badge-danger"><i class="far fa-clock"></i> 2 mins</small>
                                    <!-- General tools such as edit or delete-->
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <!-- TO DO List -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="ion ion-clipboard mr-1"></i>
                                Derniers Tests cloturés
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <ul class="todo-list" data-widget="todo-list">

                                {% for materiel in materiels|slice(0, 8) %}
                                <li>
                                    <!-- drag handle -->
                                    <span class="handle">
                                      <i class="fas fa-ellipsis-v"></i>
                                      <i class="fas fa-ellipsis-v"></i>
                                    </span>
                                    <!-- todo text -->
                                    <span class="text">{{ materiel.id ~' '~materiel.modele.type.libelle~' '~materiel.modele.marque.libelle}}</span>
                                    <!-- Emphasis label -->
                                    {% if materiel.etat == 1 %}
                                        <small class="badge badge-success"><i class="far fa-clock"></i> A vendre</small>
                                    {% elseif materiel.etat == 2 %}
                                        <small class="badge badge-success"><i class="far fa-clock"></i> A donner</small>
                                    {% elseif materiel.etat == 3 %}
                                        <small class="badge badge-danger"><i class="far fa-clock"></i> A recycler</small>
                                    {% elseif materiel.etat == 4 %}
                                        <small class="badge badge-primary"><i class="far fa-clock"></i> Att Requise</small>
                                    {% endif %}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
