{% extends 'base.html.twig' %}

{% block title %}Process{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Procédures de tests d'appareillages</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('proccess_index') }}">Procédures</a></li>
                            <li class="breadcrumb-item active">Fiche {{ proccess.ordre }} procédure {{ proccess.type.libelle }} </li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Fiche {{ proccess.ordre }} procédure {{ proccess.type.libelle }} </h3>
                        <span class="float-right"> {{ include('proccess/_delete_form.html.twig') }}</span>
                        <a href="{{ path('proccess_edit', {'id': proccess.id}) }}" class="btn btn-outline-warning float-right mr-2">Modifier la procédure</a>
                        <div class="card-tools" style="margin-right: 15px;">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <h1>Process</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ proccess.id }}</td>
                            </tr>
                            <tr>
                                <th>Action</th>
                                <td>{{ proccess.action }}</td>
                            </tr>
                            <tr>
                                <th>ResultNegatif</th>
                                <td>{{ proccess.resultNegatif }}</td>
                            </tr>
                            <tr>
                                <th>ResultPositif</th>
                                <td>{{ proccess.resultPositif }}</td>
                            </tr>
                            <tr>
                                <th>Ordre</th>
                                <td>{{ proccess.ordre }}</td>
                            </tr>
                            <tr>
                                <th>Images</th>
                                <td>{{ proccess.image }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
