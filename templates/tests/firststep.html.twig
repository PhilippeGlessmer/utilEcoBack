{% extends 'base.html.twig' %}

{% block title %}Identification Materiel{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Tests: Identification Materiel</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="">Tests</a></li>
                            <li class="breadcrumb-item active">Identification Materiel Fournisseur, Particulier, Distributeur</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        {{ include('tests/includes/messageflash.html.twig') }}
                        <div class="card card-default">
                            <div class="card-header">
                                <h3 class="card-title">Identification Materiel Fournisseur Particulier Distributeur</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            {{ form_start(form) }}
                            <div class="card-body">
                                <h3>Fournisseur / Particulier / Distributeur</h3>
                                {{ form_widget(form) }}
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-success">{{ button_label|default('Enregistrer et Suivant') }}</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>

                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
