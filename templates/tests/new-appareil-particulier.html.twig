{% extends 'base.html.twig' %}

{% block title %}Materiels: Ajout{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Materiels : Entrée d'un nouveau materiel</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('marques_index') }}">Materiel</a></li>
                            <li class="breadcrumb-item active">Entrée d'un materiel en BDD</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Formulaire d'entrée d'un materiel</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success w-100">{{ button_label|default('Enregistrer l\'appareil dans la base de donnée') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>


{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
        var $post_marque = $("#particulier_materiels_marque")
        var $token = $("#particulier_materiels_token")
        $post_marque.change(function (){
            var $form = $(this).closest('form')
            var data =  {}
            data[$token.attr('name')] = $token.val()
            data[$post_marque.attr('name')] = $post_marque.val()
            $.post($form.attr('action'), data).then(function (response){
                $("#particulier_materiels_modele").replaceWith(
                    $(response).find("#particulier_materiels_modele"),
                )
            })

        })
    </script>
{% endblock %}
