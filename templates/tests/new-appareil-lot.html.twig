{% extends 'base.html.twig' %}

{% block title %}Materiels: Ajout{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Materiels : Entrée d'un nouveau materiel</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('marques_index') }}">Materiel</a></li>
                            <li class="breadcrumb-item active">Entrée d'un materiel en BDD</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Formulaire d'entrée d'un materiel</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.marque) }}
                        <div class="row">
                            <div class="col-8">
                                {{ form_row(form.modele) }}
                            </div>
                            <div class="col-4">
                                <div id="addmodele" style="" class="">

                                    <a href="{{ path('models_new') }}" class="btn btn-outline-success w-100 mt-4">Ajouter un modele</a>
                                </div>
                            </div>
                        </div>
                        {{ form_row(form.nSerieFabricant) }}
                        {{ form_row(form.nSerieFournisseur) }}
                        {{ form_row(form.lots) }}
                        <button class="btn btn-success w-100">{{ button_label|default('Enregistrer l\'appareil dans la base de donnée') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>


{% endblock %}
