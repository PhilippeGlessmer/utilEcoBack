{% extends 'base.html.twig' %}

{% block title %}Modification fiche utilisateur: {{ user.civil ~' '~ user.nom ~' '~ user.prenom }}{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Utilisateurs: Modification fiche Utilisateur</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('users_index') }}">Utilisateurs</a></li>
                            <li class="breadcrumb-item active">Modification fiche utilisateur: {{ user.civil ~' '~ user.nom ~' '~ user.prenom }}</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Formulaire de modification de profil</h3>

                        <div class="card-tools">
                            <span class="float-right">{{ include('users/_delete_form.html.twig') }}</span>
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        {{ include('users/_form.html.twig', {'button_label': 'Enregistrer la modification'}) }}
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </section>
    </div>
{% endblock %}
