{% extends 'base.html.twig' %}

{% block title %}Edit Types{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Types d'appareillages: Fiche {{ type.libelle }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{  path('dashbord') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{  path('types_index') }}">Types d'appareillages</a></li>
                            <li class="breadcrumb-item active">Modification Fiche type : {{ type.libelle }} </li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Formulaire de modification de la fiche : {{ type.libelle }} </h3>
                                <span class="float-right">  {{ include('types/_delete_form.html.twig') }}</span>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                {{ include('types/_form.html.twig', {'button_label': 'Enregistrer la modification'}) }}
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
